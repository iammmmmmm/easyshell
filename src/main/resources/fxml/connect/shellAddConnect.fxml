<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.gui.combobox.SSHAuthTypeCombobox?>
<?import cn.oyzh.fx.gui.button.CancelButton?>
<?import cn.oyzh.fx.gui.button.SubmitButton?>
<?import cn.oyzh.fx.gui.button.TestButton?>
<?import cn.oyzh.fx.gui.label.InfoLabel?>
<?import cn.oyzh.fx.gui.svg.glyph.ChooseSVGGlyph?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.fx.gui.text.field.NumberTextField?>
<?import cn.oyzh.fx.gui.text.field.PortTextField?>
<?import cn.oyzh.fx.gui.text.field.ReadOnlyTextField?>
<?import cn.oyzh.fx.gui.toggle.SwitchToggleSwitch?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.button.FXButton?>
<?import cn.oyzh.fx.plus.controls.label.FXLabel?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import cn.oyzh.fx.plus.controls.text.area.FXTextArea?>
<?import cn.oyzh.fx.plus.controls.toggle.FXToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import cn.oyzh.fx.gui.combobox.CharsetComboBox?>
<?import cn.oyzh.easyshell.fx.ShellOsTypeComboBox?>
<?import cn.oyzh.fx.gui.text.field.PasswordTextField?>
<?import cn.oyzh.easyshell.fx.ShellAuthTypeCombobox?>
<?import cn.oyzh.easyshell.fx.key.ShellKeyComboBox?>
<?import cn.oyzh.easyshell.fx.term.ShellTermTypeComboBox?>
<?import cn.oyzh.easyshell.fx.proxy.ShellProxyAuthTypeCombobox?>
<?import cn.oyzh.easyshell.fx.proxy.ShellProxyProtocolCombobox?>
<FXVBox styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.controller.connect.ShellAddConnectController" realWidth="750"
        realHeight="480">
    <FXTabPane fx:id="tabPane" flexWidth="100%" flexHeight="100% - 60">
        <FXTab text="%base.base">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.name">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField fx:id="name" tipText="%base.nameTip" maxLen="30" require="true" realHeight="30"
                                    flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.userName">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField fx:id="userName" tipText="%base.userNameTip" require="true" realHeight="30"
                                    flexWidth="100% - 180" maxLen="1024" text="root">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.auth">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ShellAuthTypeCombobox initIndex="0" fx:id="authMethod" prefWidth="150" realHeight="30">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </ShellAuthTypeCombobox>
                    <PasswordTextField fx:id="password" groupId="password" tipText="%base.passwordTip" require="true"
                                       realHeight="30"
                                       flexWidth="100% - 340">
                        <FXHBox.margin>
                            <Insets left="10" top="5"/>
                        </FXHBox.margin>
                    </PasswordTextField>
                    <ReadOnlyTextField visible="false" managedBindVisible="true" groupId="certificate"
                                       fx:id="certificate" flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ReadOnlyTextField>
                    <ChooseSVGGlyph visible="false" managedBindVisible="true" groupId="certificate"
                                    onMousePrimaryClicked="#chooseCertificate">
                        <HBox.margin>
                            <Insets left="5" top="12"/>
                        </HBox.margin>
                    </ChooseSVGGlyph>
                    <ShellKeyComboBox visible="false" managedBindVisible="true" groupId="key"
                                      fx:id="key" flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ShellKeyComboBox>
                </FXHBox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ClearableTextField fx:id="hostIp" tipText="%base.hostTip" require="true" realHeight="30"
                                        flexWidth="60%" maxLen="1024">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField require="true" flexWidth="40% - 190" fx:id="hostPort" realHeight="30" value="22">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.extra">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.osType">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellOsTypeComboBox fx:id="osType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellOsTypeComboBox>
                <InfoLabel text="%base.connectTimeout">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <NumberTextField realHeight="30" flexWidth="100% - 180" min="3" max="30" fx:id="connectTimeOut"
                                     tipText="%shell.info.connectTimoutTip" value="5" require="true">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </NumberTextField>
                    <FXLabel text="%base.second">
                        <HBox.margin>
                            <Insets left="10" top="9"/>
                        </HBox.margin>
                    </FXLabel>
                </FXHBox>
                <InfoLabel text="%base.remark">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXTextArea fx:id="remark" realHeight="80" flexWidth="100% - 180" tipText="%base.remarkTip"
                            maxLen="100">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </FXTextArea>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.terminal">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.charset">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <CharsetComboBox fx:id="charset" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </CharsetComboBox>
                <InfoLabel text="%base.terminal">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermTypeComboBox fx:id="termType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermTypeComboBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.proxy" fx:id="proxyTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableProxy">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="enableProxy">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.protocol">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellProxyProtocolCombobox initIndex="0" disable="true" fx:id="proxyProtocol" tipText="%base.hostTip"
                                            require="true"
                                            realHeight="30"
                                            flexWidth="100% - 180" groupId="proxy">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellProxyProtocolCombobox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" groupId="proxy">
                    <ClearableTextField fx:id="proxyHost" tipText="%base.hostTip" require="true" realHeight="30"
                                        flexWidth="100% - 285" maxLen="1024">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField realWidth="100" fx:id="proxyPort" require="true" realHeight="30" value="7890">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                </FXHBox>
                <InfoLabel text="%base.authMethod">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellProxyAuthTypeCombobox initIndex="0" disable="true" groupId="proxy" fx:id="proxyAuthType"
                                            realHeight="30"
                                            flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellProxyAuthTypeCombobox>
                <InfoLabel text="%base.authInfo">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" fx:id="proxyAuthInfoBox" groupId="proxy">
                    <ClearableTextField fx:id="proxyUser" tipText="%base.userNameTip" require="true"
                                        realHeight="30"
                                        flexWidth="50% - 90">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PasswordTextField fx:id="proxyPassword" tipText="%base.passwordTip" require="true"
                                       realHeight="30"
                                       flexWidth="50% - 95">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PasswordTextField>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.sshForwarding" fx:id="sshTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableSSHForwarding">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="sshForward">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" groupId="ssh">
                    <ClearableTextField fx:id="sshHost" tipText="%base.hostTip" require="true" realHeight="30"
                                        flexWidth="100% - 285" maxLen="1024">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField realWidth="100" fx:id="sshPort" realHeight="30" value="22">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                </FXHBox>
                <InfoLabel text="%base.connectTimeout">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" groupId="ssh">
                    <NumberTextField disable="true" groupId="ssh" flexWidth="100% - 180" fx:id="sshTimeout"
                                     tipText="%base.sshTimeoutTip"
                                     realHeight="30" value="3">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </NumberTextField>
                    <FXLabel text="%base.second">
                        <HBox.margin>
                            <Insets left="10" top="9"/>
                        </HBox.margin>
                    </FXLabel>
                </FXHBox>
                <InfoLabel text="%base.sshUser">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField disable="true" groupId="ssh" fx:id="sshUser" tipText="%base.sshUserTip"
                                    require="true" realHeight="30"
                                    flexWidth="100% - 180" text="root">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.auth">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" groupId="ssh">
                    <SSHAuthTypeCombobox initIndex="0" fx:id="sshAuthMethod" prefWidth="150" realHeight="30">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </SSHAuthTypeCombobox>
                    <PasswordTextField fx:id="sshPassword" tipText="%base.sshPwdTip" require="true" realHeight="30"
                                       flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </PasswordTextField>
                    <ReadOnlyTextField visible="false" managedBindVisible="true" groupId="sshCertificate"
                                       fx:id="sshCertificate" flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ReadOnlyTextField>
                    <ChooseSVGGlyph visible="false" managedBindVisible="true" groupId="sshCertificate"
                                    onMousePrimaryClicked="#chooseSSHCertificate">
                        <HBox.margin>
                            <Insets left="5" top="12"/>
                        </HBox.margin>
                    </ChooseSVGGlyph>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="X11" fx:id="x11Tab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.options">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FXToggleSwitch text="%shell.connect.tip1" fx:id="x11forwarding">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </FXToggleSwitch>
                    <FXButton groupId="x11" text="%shell.connect.tip3" onMousePrimaryClicked="#downloadX11">
                        <FXHBox.margin>
                            <Insets left="10"/>
                        </FXHBox.margin>
                    </FXButton>
                </FXHBox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField require="true" prefHeight="30" text="127.0.0.1" fx:id="x11Host" tipText="%base.contentTip1"
                                    flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.port">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <PortTextField require="true" prefHeight="30" text="6000" fx:id="x11Port" tipText="%base.contentTip1"
                               flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </PortTextField>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.background" fx:id="backgroundTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.file">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox groupId="background" disable="true">
                    <ClearableTextField require="true" realHeight="30" flexWidth="100% - 180" fx:id="backgroundImage"
                                        tipText="%base.fileTip1">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <ChooseSVGGlyph onMousePrimaryClicked="#chooseBackgroundImage">
                        <HBox.margin>
                            <Insets left="5" top="9"/>
                        </HBox.margin>
                    </ChooseSVGGlyph>
                </FXHBox>
            </FXVBox>
        </FXTab>
    </FXTabPane>
    <FXHBox flexWidth="100%" realHeight="50">
        <TestButton onAction="#testConnect" iconSizePercent="0.8">
            <HBox.margin>
                <Insets left="30" top="10"/>
            </HBox.margin>
        </TestButton>
        <SubmitButton onAction="#add">
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FXHBox>
</FXVBox>
