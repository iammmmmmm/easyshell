<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.font.FontSizeComboBox?>
<?import cn.oyzh.fx.rich.richtextfx.data.RichDataTypeComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import cn.oyzh.easyshell.fx.ShellDataTextAreaPane?>
<?import cn.oyzh.fx.gui.label.InfoLabel?>
<?import cn.oyzh.fx.gui.text.field.ReadOnlyTextField?>
<?import cn.oyzh.fx.plus.controls.button.FXCheckBox?>
<FXVBox styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.controller.sftp.ShellSftpFilePermissionController" prefWidth="1200" realHeight="650">
    <InfoLabel text="%base.fileName">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <ReadOnlyTextField fx:id="fileName" realHeight="30" flexWidth="100% - 140">
        <VBox.margin>
            <Insets left="30" top="5"/>
        </VBox.margin>
    </ReadOnlyTextField>
    <InfoLabel text="%base.owner" groupId="size">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <FXHBox>
        <FXCheckBox fx:id="ownerR" text="%base.read">
            <FXHBox.margin>
                <Insets left="30" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="ownerW" text="%base.write">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="ownerE" text="%base.execute">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
    </FXHBox>
    <InfoLabel text="%base.groups">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <FXHBox>
        <FXCheckBox fx:id="groupsR" text="%base.read">
            <FXHBox.margin>
                <Insets left="30" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="groupsW" text="%base.write">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="groupsE" text="%base.execute">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
    </FXHBox>
    <InfoLabel text="%base.others">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <FXHBox>
        <FXCheckBox fx:id="othersR" text="%base.read">
            <FXHBox.margin>
                <Insets left="30" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="othersW" text="%base.write">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
        <FXCheckBox fx:id="othersE" text="%base.execute">
            <FXHBox.margin>
                <Insets left="10" top="5"/>
            </FXHBox.margin>
        </FXCheckBox>
    </FXHBox>
</FXVBox>
