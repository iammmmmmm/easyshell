<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyfx.controls.CancelButton?>
<?import cn.oyzh.easyfx.controls.FlexCheckBox?>
<?import cn.oyzh.easyfx.controls.FlexHBox?>
<?import cn.oyzh.easyfx.controls.FlexTabPane?>
<?import cn.oyzh.easyfx.controls.FlexVBox?>
<?import cn.oyzh.easyfx.controls.FXLabel?>
<?import cn.oyzh.easyfx.controls.FXRadioButton?>
<?import cn.oyzh.easyfx.controls.FXTab?>
<?import cn.oyzh.easyfx.controls.FXToggleGroup?>
<?import cn.oyzh.easyfx.controls.SubmitButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FlexVBox styleClass="panel,panel-primary" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cn.oyzh.easyssh.controller.SettingController" realWidth="500" realHeight="280">
    <FlexTabPane flexWidth="100%" flexHeight="100% - 60">
        <FXTab text="页面设置">
            <FlexVBox flexWidth="100%">
                <FlexHBox flexWidth="100%" realHeight="50">
                    <FXLabel text="窗口关闭" realHeight="30" realWidth="65" styleClass="lbl,lbl-primary">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </FXLabel>
                    <fx:define>
                        <FXToggleGroup fx:id="exitMode"/>
                    </fx:define>
                    <FXRadioButton toggleGroup="$exitMode" text="最小化到托盘" realHeight="25" selected="true"
                                   fx:id="exitMode0" userData="0">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FXRadioButton>
                    <FXRadioButton toggleGroup="$exitMode" text="询问是否退出" realHeight="25" fx:id="exitMode1"
                                   userData="1">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FXRadioButton>
                    <FXRadioButton toggleGroup="$exitMode" text="直接退出程序" realHeight="25" fx:id="exitMode2"
                                   userData="2">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FXRadioButton>
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                </FlexHBox>
                <FlexHBox flexWidth="100%" realHeight="50">
                    <FXLabel text="页面记忆" realHeight="30" realWidth="65" styleClass="lbl,lbl-primary">
                        <HBox.margin>
                            <Insets left="20" top="10"/>
                        </HBox.margin>
                    </FXLabel>
                    <FlexCheckBox text="记住页面大小" realHeight="25" fx:id="pageSize">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FlexCheckBox>
                    <FlexCheckBox text="记住页面位置" realHeight="25" fx:id="pageLocation">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FlexCheckBox>
                    <FlexCheckBox text="记住页面拉伸" selected="true" realHeight="25" fx:id="pageResize">
                        <HBox.margin>
                            <Insets left="10" top="12"/>
                        </HBox.margin>
                    </FlexCheckBox>
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                </FlexHBox>
            </FlexVBox>
        </FXTab>
    </FlexTabPane>

    <FlexHBox flexWidth="100%" realHeight="50">
        <SubmitButton onAction="#saveSetting" text="保存">
            <HBox.margin>
                <Insets left="95" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FlexHBox>
</FlexVBox>
