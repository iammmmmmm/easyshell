<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.gui.button.CopyButton?>
<?import cn.oyzh.fx.gui.button.SubmitButton?>
<?import cn.oyzh.fx.gui.label.InfoLabel?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.fx.gui.text.field.ReadOnlyTextField?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FXTab text="Zookeeper" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="cn.oyzh.easyshell.controller.tool.ShellToolZookeeperTabController">
    <FXVBox flexHeight="100%" flexWidth="100%">
        <InfoLabel text="%base.userInfo">
            <VBox.margin>
                <Insets left="30" top="20"/>
            </VBox.margin>
        </InfoLabel>
        <FXHBox>
            <ClearableTextField fx:id="user" realHeight="30" flexWidth="50% - 115" tipText="%base.userNameTip">
                <HBox.margin>
                    <Insets left="30" top="5"/>
                </HBox.margin>
            </ClearableTextField>
            <ClearableTextField fx:id="pwd" realHeight="30" flexWidth="50% - 115" tipText="%base.passwordTip">
                <HBox.margin>
                    <Insets left="10" top="5"/>
                </HBox.margin>
            </ClearableTextField>
        </FXHBox>
        <InfoLabel text="%base.digestInfo">
            <VBox.margin>
                <Insets left="30" top="20"/>
            </VBox.margin>
        </InfoLabel>
        <FXHBox>
            <ReadOnlyTextField fx:id="digest" realHeight="30" flexWidth="100% - 220">
                <HBox.margin>
                    <Insets left="30" top="5"/>
                </HBox.margin>
            </ReadOnlyTextField>
            <CopyButton onAction="#copyDigest" prefHeight="30">
                <HBox.margin>
                    <Insets left="10" top="5"/>
                </HBox.margin>
            </CopyButton>
        </FXHBox>
        <FXHBox flexWidth="100%" realHeight="50">
            <SubmitButton onAction="#genDigest" text="%base.generate">
                <HBox.margin>
                    <Insets left="30" top="20"/>
                </HBox.margin>
            </SubmitButton>
        </FXHBox>
    </FXVBox>
</FXTab>
