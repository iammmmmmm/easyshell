<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.fx.plus.controls.pane.FXPane?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.gui.svg.glyph.UploadBoxSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.DownloadBoxSVGGlyph?>
<?import cn.oyzh.easyshell.fx.ftp.ShellFTPUploadFileTableView?>
<?import cn.oyzh.easyshell.fx.ftp.ShellFTPDownloadFileTableView?>
<FXTabPane prefWidth="1200" prefHeight="650" styleClass="root"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="cn.oyzh.easyshell.controller.ftp.ShellFTPManageController">
    <FXTab text="%base.upload">
        <graphic>
            <UploadBoxSVGGlyph sizeStr="12"/>
        </graphic>
        <ShellFTPUploadFileTableView fx:id="uploadTable" flexHeight="100% " flexWidth="100%">
            <columns>
                <FXTableColumn prefWidth="240" valueName="localPath" text="%base.fileName"/>
                <FXTableColumn flexWidth="100% - 400" valueName="remotePath" text="%base.destPath"/>
                <FXTableColumn prefWidth="150" valueName="fileSize" text="%base.fileSize"/>
            </columns>
        </ShellFTPUploadFileTableView>
    </FXTab>
    <FXTab text="%base.download">
        <graphic>
            <DownloadBoxSVGGlyph sizeStr="12"/>
        </graphic>
        <ShellFTPDownloadFileTableView fx:id="downloadTable" flexHeight="100%" flexWidth="100%">
            <columns>
                <FXTableColumn prefWidth="240" valueName="localPath" text="%base.fileName"/>
                <FXTableColumn flexWidth="100% - 400" valueName="remotePath" text="%base.destPath"/>
                <FXTableColumn prefWidth="150" valueName="fileSize" text="%base.fileSize"/>
            </columns>
        </ShellFTPDownloadFileTableView>
    </FXTab>
</FXTabPane>

