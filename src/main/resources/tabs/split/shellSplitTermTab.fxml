<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyshell.fx.connect.ShellSSHConnectTextField?>
<?import cn.oyzh.fx.gui.button.ExecuteButton?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<FXVBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        fx:controller="cn.oyzh.easyshell.tabs.split.ShellSplitTermController"
        flexWidth="100%" flexHeight="100%">
    <FXHBox fx:id="termBox" flexWidth="100%" flexHeight="100% - 30">

    </FXHBox>
    <FXHBox flexWidth="100%" realHeight="30">
        <ShellSSHConnectTextField require="true" fx:id="connect" realHeight="26">
            <FXHBox.margin>
                <Insets left="5" top="2"/>
            </FXHBox.margin>
        </ShellSSHConnectTextField>
        <ExecuteButton text="%base.connect" onAction="#doConnect" realHeight="26">
            <FXHBox.margin>
                <Insets left="5" top="2"/>
            </FXHBox.margin>
        </ExecuteButton>
    </FXHBox>
</FXVBox>
