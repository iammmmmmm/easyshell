<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyshell.fx.ShellDiskInfoTableView?>
<?import cn.oyzh.fx.gui.svg.glyph.RefreshSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FXTab fx:id="root" xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="cn.oyzh.easyshell.tabs.ssh.server.ShellSSHServerDiskTabController" text="%base.disk">
    <FXVBox flexHeight="100%" flexWidth="100%">
        <FXHBox prefHeight="30">
            <RefreshSVGGlyph tipText="%base.refresh" onMousePrimaryClicked="#refresh">
                <FXHBox.margin>
                    <Insets left="5" top="7"/>
                </FXHBox.margin>
            </RefreshSVGGlyph>
        </FXHBox>
        <ShellDiskInfoTableView flexWidth="100% - 10" flexHeight="100% - 40" fx:id="diskTable">
            <columns>
                <FXTableColumn prefWidth="200" valueName="fileSystem" text="%base.fileSystem"/>
                <FXTableColumn prefWidth="120" valueName="size" text="%base.size"/>
                <FXTableColumn prefWidth="120" valueName="used" text="%base.used"/>
                <FXTableColumn prefWidth="120" valueName="avail" text="%base.avail"/>
                <FXTableColumn prefWidth="120" valueName="use" text="%base.usageRate"/>
                <FXTableColumn flexWidth="100% - 685" valueName="mountedOn" text="%base.mountedOn"/>
            </columns>
            <FXVBox.margin>
                <Insets left="5" top="5"/>
            </FXVBox.margin>
        </ShellDiskInfoTableView>
    </FXVBox>
</FXTab>
