<FXTab xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
       fx:controller="cn.oyzh.easyshell.tabs.ssh.ShellSSHEffTabController"
       text="%base.terminal" fx:id="root">
    <graphic>
        <LinuxSVGGlyph sizeStr="11"/>
    </graphic>
    <FXPane flexWidth="100%" flexHeight="100%">
        <FXVBox prefWidth="320" flexHeight="100%" fx:id="leftBox" managedBindVisible="true">
            <FXHBox prefHeight="30" flexWidth="100%">
                <RefreshSVGGlyph fx:id="refreshFile" onMousePrimaryClicked="#refreshFile">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </RefreshSVGGlyph>
                <DeleteSVGGlyph fx:id="deleteFile" onMousePrimaryClicked="#deleteFile">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </DeleteSVGGlyph>
                <ClearableTextField flexWidth="100% - 197" realHeight="24" fx:id="filterFile"
                                    tipText="%base.searchKWTip">
                    <FXHBox.margin>
                        <Insets left="5" top="3"/>
                    </FXHBox.margin>
                </ClearableTextField>
                <FileUploadSVGGlyph tipText="%base.uploadFile" enableWaiting="false"
                                    onMousePrimaryClicked="#uploadFile">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FileUploadSVGGlyph>
                <FolderUploadSVGGlyph tipText="%base.uploadDir" enableWaiting="false"
                                      onMousePrimaryClicked="#uploadFolder">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FolderUploadSVGGlyph>
                <FileAddSVGGlyph onMousePrimaryClicked="#touchFile" tipText="%base.touchFile">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FileAddSVGGlyph>
                <FolderAddSVGGlyph onMousePrimaryClicked="#mkdir" tipText="%base.mkdir">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FolderAddSVGGlyph>
                <HiddenSVGPane fx:id="hiddenPane" size="16,13" onMousePrimaryClicked="#hiddenFile">
                    <HBox.margin>
                        <Insets left="5" top="8"/>
                    </HBox.margin>
                </HiddenSVGPane>
                <BoxSVGLabel fx:id="manage" onMousePrimaryClicked="#manage">
                    <HBox.margin>
                        <Insets left="5" top="7"/>
                    </HBox.margin>
                </BoxSVGLabel>
            </FXHBox>
            <FXHBox prefHeight="30" flexWidth="100%">
                <HomeSVGGlyph onMousePrimaryClicked="#intoHome">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </HomeSVGGlyph>
                <ReturnFolderSVGGlyph size="15" onMousePrimaryClicked="#returnDir">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </ReturnFolderSVGGlyph>
                <ShellFileLocationTextField prefHeight="22" fx:id="location" flexWidth="100% - 70">
                    <FXHBox.margin>
                        <Insets left="5" top="4"/>
                    </FXHBox.margin>
                </ShellFileLocationTextField>
            </FXHBox>
            <ShellSSHSFTPFileTableView fx:id="fileTable" flexWidth="100%" flexHeight="100% - 90">
                <columns>
                    <FXTableColumn style="-fx-padding-right:0;-fx-padding-buttom:3" prefWidth="20" valueName="icon"/>
                    <FXTableColumn style="-fx-padding-left:0;" prefWidth="200" valueName="fileName"
                                   text="%base.name"/>
                    <FXTableColumn prefWidth="90" valueName="fileSizeDisplay" text="%base.size"/>
                    <FXTableColumn prefWidth="170" valueName="modifyTime" text="%base.modifyTime"/>
                    <FXTableColumn prefWidth="170" valueName="addTime" text="%base.addTime"/>
                    <FXTableColumn prefWidth="110" valueName="permissions" text="%base.permissions"/>
                    <FXTableColumn prefWidth="70" valueName="owner" text="%base.owner"/>
                    <FXTableColumn prefWidth="70" valueName="group" text="%base.group"/>
                </columns>
            </ShellSSHSFTPFileTableView>
            <FXToggleSwitch fx:id="followTerminalDir" text="%shell.connect.tip12">
                <FXVBox.margin>
                    <Insets left="5" top="5"/>
                </FXVBox.margin>
            </FXToggleSwitch>
        </FXVBox>
        <FXVBox flexWidth="100% - 320" flexHeight="100%" layoutX="320" fx:id="rightBox">
            <ShellSSHTermWidget fx:id="widget" flexWidth="100%" flexHeight="100% - 30">
            </ShellSSHTermWidget>
            <FXHBox flexWidth="100%" realHeight="30">
                <FXLabel fx:id="termSize">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FXLabel>
                <HistorySVGGlyph fx:id="termHistory" tipText="%base.terminalHistory" onMousePrimaryClicked="#termHistory">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </HistorySVGGlyph>
                <FXToggleSwitch fx:id="showFile" text="%base.file" selected="true">
                    <FXHBox.margin>
                        <Insets left="5" top="5"/>
                    </FXHBox.margin>
                </FXToggleSwitch>
                <FXToggleSwitch fx:id="serverMonitor" text="%base.monitor">
                    <FXHBox.margin>
                        <Insets left="5" top="5"/>
                    </FXHBox.margin>
                </FXToggleSwitch>
                <FXLabel fx:id="serverMonitorInfo">
                    <FXHBox.margin>
                        <Insets left="5" top="7"/>
                    </FXHBox.margin>
                </FXLabel>
            </FXHBox>
        </FXVBox>
    </FXPane>
</FXTab>
