<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.easyshell.fx.redis.RedisKeyRowTableView?>
<?import cn.oyzh.easyshell.fx.ShellDataEditor?>
<?import cn.oyzh.easyshell.fx.svg.pane.ExpandListSVGPane?>
<?import cn.oyzh.fx.gui.page.PageBox?>
<?import cn.oyzh.fx.gui.svg.glyph.AddSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.CopySVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.DeleteSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.RefreshSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.RenameSVGGlyph?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.fx.gui.text.field.ReadOnlyTextField?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import cn.oyzh.fx.plus.controls.text.FXText?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FXVBox flexWidth="100%" flexHeight="100% - 30" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.tabs.redis.key.RedisStreamKeyController">
    <FXHBox groupId="stream_list" realHeight="30" flexWidth="100%">
        <RefreshSVGGlyph tipText="%base.refreshTip1" size="15" onMousePrimaryClicked="#reloadKey">
            <HBox.margin>
                <Insets left="5"/>
            </HBox.margin>
        </RefreshSVGGlyph>
        <RenameSVGGlyph tipText="%base.rename" size="16" onMousePrimaryClicked="#renameKey">
            <HBox.margin>
                <Insets left="5"/>
            </HBox.margin>
        </RenameSVGGlyph>
        <CopySVGGlyph size="16" onMousePrimaryClicked="#copyKey">
            <HBox.margin>
                <Insets left="5"/>
            </HBox.margin>
        </CopySVGGlyph>
        <ClearableTextField fx:id="filter" tipText="%base.filterKWTip" realHeight="22" prefWidth="200">
            <HBox.margin>
                <Insets left="5" top="-5"/>
            </HBox.margin>
        </ClearableTextField>
        <padding>
            <Insets top="7"/>
        </padding>
    </FXHBox>
    <RedisKeyRowTableView groupId="stream_list" flexWidth="100% - 4" realHeight="295" fx:id="listTable"
                          fixedCellSize="25">
        <columns>
            <FXTableColumn flexWidth="30%" text="%base.id" valueName="id"/>
            <FXTableColumn flexWidth="70% - 12" text="%base.content" valueName="value"/>
        </columns>
        <VBox.margin>
            <Insets left="2"/>
        </VBox.margin>
    </RedisKeyRowTableView>
    <FXHBox realHeight="24">
        <CopySVGGlyph size="16" onMousePrimaryClicked="#copyRow">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </CopySVGGlyph>
        <AddSVGGlyph size="16" onMousePrimaryClicked="#addRow">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </AddSVGGlyph>
        <DeleteSVGGlyph size="16" onMousePrimaryClicked="#deleteRow">
            <HBox.margin>
                <Insets left="5" top="5"/>
            </HBox.margin>
        </DeleteSVGGlyph>
        <ExpandListSVGPane size="14" fx:id="expandPane" onMousePrimaryClicked="#expendList">
            <HBox.margin>
                <Insets left="5" top="6"/>
            </HBox.margin>
        </ExpandListSVGPane>
        <PageBox onJumpFired="#pageJump" onSettingClicked="#pageSetting" fx:id="pagePane" realHeight="22" onFirstClicked="#firstPage" onLastClicked="#lastPage"
                 onPrevClicked="#prevPage" onNextClicked="#nextPage" hideIfLessPage="false">
            <HBox.margin>
                <Insets left="5" top="4"/>
            </HBox.margin>
        </PageBox>
    </FXHBox>
    <FXText text="%base.content">
        <VBox.margin>
            <Insets left="5"/>
        </VBox.margin>
    </FXText>
    <ShellDataEditor editable="false" formatType="JSON" disable="true" fontSize="11" fx:id="nodeData"
                     flexHeight="100% - 408"
                     flexWidth="100% - 4">
        <VBox.margin>
            <Insets left="2"/>
        </VBox.margin>
    </ShellDataEditor>
    <FXText text="%base.id">
        <VBox.margin>
            <Insets top="5" left="5"/>
        </VBox.margin>
    </FXText>
    <ReadOnlyTextField disable="true" realHeight="25" flexWidth="100% - 4" fx:id="streamID">
        <VBox.margin>
            <Insets left="2"/>
        </VBox.margin>
    </ReadOnlyTextField>
</FXVBox>
