<FXVBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        fx:controller="cn.oyzh.easyshell.tabs.sftp.ShellSFTPTabController"
        fx:id="root" flexWidth="100%" flexHeight="100%">
    <FXHBox prefHeight="30" flexWidth="100%">
        <HomeSVGGlyph onMousePrimaryClicked="#intoHome">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </HomeSVGGlyph>
        <ReturnFolderSVGGlyph size="15" onMousePrimaryClicked="#returnDir">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </ReturnFolderSVGGlyph>
        <ShellSftpLocationTextField prefHeight="22" fx:id="location" flexWidth="100% - 330">
            <FXHBox.margin>
                <Insets left="5" top="4"/>
            </FXHBox.margin>
        </ShellSftpLocationTextField>
        <RefreshSVGGlyph fx:id="refreshFile" onMousePrimaryClicked="#refreshFile">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </RefreshSVGGlyph>
        <FileUploadSVGGlyph fx:id="uploadFile" tipText="%base.uploadFile" enableWaiting="false"
                            onMousePrimaryClicked="#uploadFile">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </FileUploadSVGGlyph>
        <FolderUploadSVGGlyph fx:id="uploadDir" tipText="%base.uploadDir" enableWaiting="false"
                              onMousePrimaryClicked="#uploadFolder">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </FolderUploadSVGGlyph>
        <FileAddSVGGlyph onMousePrimaryClicked="#touchFile" tipText="%base.touchFile">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </FileAddSVGGlyph>
        <FolderAddSVGGlyph onMousePrimaryClicked="#mkdir" tipText="%base.mkdir">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </FolderAddSVGGlyph>
        <DeleteSVGGlyph fx:id="deleteFile" onMousePrimaryClicked="#deleteFile">
            <FXHBox.margin>
                <Insets left="5" top="7"/>
            </FXHBox.margin>
        </DeleteSVGGlyph>
        <HiddenSVGPane fx:id="hiddenPane" size="16,13" onMousePrimaryClicked="#hiddenFile">
            <HBox.margin>
                <Insets left="5" top="8"/>
            </HBox.margin>
        </HiddenSVGPane>
        <ClearableTextField prefWidth="120" realHeight="24" fx:id="filterFile" tipText="%base.searchKWTip">
            <FXHBox.margin>
                <Insets left="5" top="3"/>
            </FXHBox.margin>
        </ClearableTextField>
    </FXHBox>
    <ShellSFTPFileConnectTableView fx:id="fileTable" flexWidth="100%" flexHeight="100% - 30">
        <columns>
            <FXTableColumn style="-fx-padding-right:0;-fx-padding-buttom:3" prefWidth="20" valueName="icon"/>
            <FXTableColumn style="-fx-padding-left:0;" flexWidth="100% - 735" valueName="fileName"
                           text="%base.name"/>
            <FXTableColumn prefWidth="110" valueName="size" text="%base.size"/>
            <FXTableColumn prefWidth="170" valueName="modifyTime" text="%base.modifyTime"/>
            <FXTableColumn prefWidth="170" valueName="addTime" text="%base.addTime"/>
            <FXTableColumn prefWidth="110" valueName="permissions" text="%base.permissions"/>
            <FXTableColumn prefWidth="70" valueName="owner" text="%base.owner"/>
            <FXTableColumn prefWidth="70" valueName="group" text="%base.group"/>
        </columns>
    </ShellSFTPFileConnectTableView>
    <FXHBox fx:id="deleteBox" prefHeight="30" flexWidth="100%" managedBindVisible="true" visible="false">
        <FXLabel text="%base.delete" prefWidth="50" maxWidth="50">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
        <FXLabel fx:id="fileDelete" flexWidth="100% - 60">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
    </FXHBox>
    <FXHBox fx:id="downloadBox" prefHeight="30" flexWidth="100%" managedBindVisible="true" visible="false">
        <FXLabel text="%base.download" prefWidth="50" maxWidth="50">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
        <FXProgressTextBar fx:id="downloadProgress" realWidth="135">
            <FXHBox.margin>
                <Insets left="5" top="-4"/>
            </FXHBox.margin>
        </FXProgressTextBar>
        <FXLabel fx:id="fileDownload" flexWidth="100% - 230">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
        <CancelSVGGlyph sizeStr="10" onMousePrimaryClicked="#cancelDownload">
            <FXHBox.margin>
                <Insets left="5" top="8"/>
            </FXHBox.margin>
        </CancelSVGGlyph>
    </FXHBox>
    <FXHBox fx:id="uploadBox" prefHeight="30" flexWidth="100%" managedBindVisible="true" visible="false">
        <FXLabel text="%base.upload" prefWidth="50" maxWidth="50">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
        <FXProgressTextBar fx:id="uploadProgress" realWidth="135">
            <FXHBox.margin>
                <Insets left="5" top="-4"/>
            </FXHBox.margin>
        </FXProgressTextBar>
        <FXLabel fx:id="fileUpload" flexWidth="100% - 230">
            <FXHBox.margin>
                <Insets left="5" top="5"/>
            </FXHBox.margin>
        </FXLabel>
        <CancelSVGGlyph sizeStr="10" onMousePrimaryClicked="#cancelUpload">
            <FXHBox.margin>
                <Insets left="5" top="8"/>
            </FXHBox.margin>
        </CancelSVGGlyph>
    </FXHBox>
</FXVBox>
