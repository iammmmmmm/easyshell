<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.chart.FXLineChart?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<FXTab xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="cn.oyzh.easyshell.tabs.connect.ShellMonitorAggregationTabController" text="%base.aggregate">
    <FXVBox flexHeight="100%" flexWidth="100%">
        <FXHBox flexWidth="100%" flexHeight="50%">
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="cpuChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="\%"/>
                </yAxis>
            </FXLineChart>
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="memoryChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="\%"/>
                </yAxis>
            </FXLineChart>
        </FXHBox>
        <FXHBox flexWidth="100%" flexHeight="50%">
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="diskChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="MB/s"/>
                </yAxis>
            </FXLineChart>
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="networkChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="KB/s"/>
                </yAxis>
            </FXLineChart>
        </FXHBox>
    </FXVBox>
</FXTab>
