<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.gui.svg.glyph.FileSVGGlyph?>
<?import cn.oyzh.easyssh.trees.sftp.SSHSftpTableView?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.gui.svg.glyph.RefreshSVGGlyph?>
<?import javafx.geometry.Insets?>
<?import cn.oyzh.fx.gui.svg.glyph.DeleteSVGGlyph?>
<?import cn.oyzh.easyssh.fx.svg.glyph.ReturnFolderSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.label.FXLabel?>
<?import cn.oyzh.fx.gui.svg.glyph.CopySVGGlyph?>
<?import cn.oyzh.fx.plus.controls.toggle.FXToggleSwitch?>
<?import cn.oyzh.easyssh.fx.svg.glyph.FolderAddSVGGlyph?>
<?import cn.oyzh.easyssh.fx.svg.glyph.FileAddSVGGlyph?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.easyssh.fx.svg.glyph.FileUploadSVGGlyph?>
<FXTab xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
       fx:controller="cn.oyzh.easyssh.tabs.connect.SSHSftpTabController"
       text="%base.file" fx:id="root">
    <graphic>
        <FileSVGGlyph sizeStr="11"/>
    </graphic>
    <FXVBox flexWidth="100%" flexHeight="100%">
        <FXHBox prefHeight="30" flexWidth="100%">
            <ClearableTextField realHeight="24" fx:id="filterFile" tipText="%base.searchKWTip">
                <FXHBox.margin>
                    <Insets left="5" top="3"/>
                </FXHBox.margin>
            </ClearableTextField>
            <ReturnFolderSVGGlyph size="15" onMousePrimaryClicked="#returnDir">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </ReturnFolderSVGGlyph>
            <RefreshSVGGlyph onMousePrimaryClicked="#refreshFile">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </RefreshSVGGlyph>
            <CopySVGGlyph disable="true" onMousePrimaryClicked="#copyFilePath" fx:id="copyFilePath">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </CopySVGGlyph>
            <FileUploadSVGGlyph onMousePrimaryClicked="#uploadFile">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </FileUploadSVGGlyph>
            <FolderAddSVGGlyph onMousePrimaryClicked="#mkDir">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </FolderAddSVGGlyph>
            <FileAddSVGGlyph onMousePrimaryClicked="#touchFile">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </FileAddSVGGlyph>
            <DeleteSVGGlyph onMousePrimaryClicked="#deleteFile">
                <FXHBox.margin>
                    <Insets left="5" top="10"/>
                </FXHBox.margin>
            </DeleteSVGGlyph>
            <FXToggleSwitch realHeight="16" selected="true" fx:id="hiddenFile" selectedText="%base.showHiddenFiles" unselectedText="%base.doNotShowHiddenFiles" >
                <FXHBox.margin>
                    <Insets left="5" top="8"/>
                </FXHBox.margin>
            </FXToggleSwitch>
        </FXHBox>
        <SSHSftpTableView fx:id="fileTable" flexWidth="100%" flexHeight="100% - 60">
            <columns>
                <FXTableColumn style="-fx-padding-right:0;-fx-padding-buttom:3" prefWidth="20" valueName="icon"/>
                <FXTableColumn style="-fx-padding-left:0;" prefWidth="150" valueName="fileName" text="%base.name"/>
                <FXTableColumn prefWidth="130" valueName="size" text="%base.size"/>
                <FXTableColumn prefWidth="175" valueName="modifyTime" text="%base.modifyTime"/>
                <FXTableColumn prefWidth="175" valueName="addTime" text="%base.addTime"/>
                <FXTableColumn prefWidth="110" valueName="permissionsString" text="%base.permissions"/>
                <FXTableColumn prefWidth="70" valueName="owner" text="%base.owner"/>
                <FXTableColumn prefWidth="70" valueName="group" text="%base.group"/>
            </columns>
        </SSHSftpTableView>
        <FXHBox fx:id="downloadBox" prefHeight="30" flexWidth="100%" managedBindVisible="true" visible="false">
            <FXLabel text="%base.download">
                <FXHBox.margin>
                    <Insets left="5" top="5"/>
                </FXHBox.margin>
            </FXLabel>
            <FXLabel fx:id="fileDownload">
                <FXHBox.margin>
                    <Insets left="5" top="5"/>
                </FXHBox.margin>
            </FXLabel>
        </FXHBox>
        <FXHBox fx:id="uploadBox" prefHeight="30" flexWidth="100%" managedBindVisible="true" visible="false">
            <FXLabel fx:id="fileUpload">
                <FXHBox.margin>
                    <Insets left="5" top="5"/>
                </FXHBox.margin>
            </FXLabel>
        </FXHBox>
        <FXHBox prefHeight="30" flexWidth="100%">
            <FXLabel fx:id="filePath">
                <FXHBox.margin>
                    <Insets left="5" top="5"/>
                </FXHBox.margin>
            </FXLabel>
        </FXHBox>
    </FXVBox>
</FXTab>
