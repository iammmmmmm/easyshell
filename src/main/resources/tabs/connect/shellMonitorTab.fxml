<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.gui.svg.glyph.MonitorSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.chart.FXLineChart?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import cn.oyzh.fx.gui.toggle.SwitchToggleSwitch?>
<?import javafx.geometry.Insets?>
<FXTab fx:id="root" text="%base.monitor" styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="cn.oyzh.easyshell.tabs.connect.ShellMonitorTabController">
    <graphic>
        <MonitorSVGGlyph sizeStr="11"/>
    </graphic>
    <FXVBox flexHeight="100%" flexWidth="100%">
        <FXHBox prefHeight="30">
            <SwitchToggleSwitch unselectedText="%base.disableRefresh" selectedText="%base.enableRefresh" fx:id="refreshBtn" selected="true">
                <FXHBox.margin>
                    <Insets left="5" top="7"/>
                </FXHBox.margin>
            </SwitchToggleSwitch>
        </FXHBox>
        <FXHBox flexWidth="100%" flexHeight="50% - 15">
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="cpuChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="\%"/>
                </yAxis>
            </FXLineChart>
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="memoryChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="\%"/>
                </yAxis>
            </FXLineChart>
        </FXHBox>
        <FXHBox flexWidth="100%" flexHeight="50% - 15">
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="diskChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="MB/s"/>
                </yAxis>
            </FXLineChart>
            <FXLineChart flexWidth="50%" flexHeight="100%" fx:id="networkChart">
                <xAxis>
                    <CategoryAxis/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="KB/s"/>
                </yAxis>
            </FXLineChart>
        </FXHBox>
    </FXVBox>
</FXTab>
