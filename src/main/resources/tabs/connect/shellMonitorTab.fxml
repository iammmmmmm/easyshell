<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import cn.oyzh.fx.plus.controls.table.FXTableView?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.gui.svg.glyph.MonitorSVGGlyph?>
<FXTab fx:id="root" text="%base.monitor" styleClass="root" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="cn.oyzh.easyshell.tabs.connect.ShellMonitorTabController">
    <graphic>
        <MonitorSVGGlyph sizeStr="11"/>
    </graphic>
    <FXVBox flexWidth="100%" flexHeight="100%">
        <FXTableView flexWidth="100%" realHeight="80" fx:id="serverTable">
            <columns>
                <FXTableColumn sortable="false" valueName="totalMemoryInfo" text="%base.totalMemory" flexWidth="8%"/>
                <FXTableColumn sortable="false" valueName="uname" text="%base.systemInfo" flexWidth="15%"/>
                <FXTableColumn sortable="false" valueName="arch" text="%base.arch" flexWidth="5%"/>
                <FXTableColumn sortable="false" valueName="ulimit" text="ulimit" flexWidth="5%"/>
            </columns>
        </FXTableView>
        <FXTabPane flexWidth="100%" flexHeight="100% - 120">
            <fx:include fx:id="aggregation" source="shellAggregationTab.fxml"/>
        </FXTabPane>
    </FXVBox>
</FXTab>
