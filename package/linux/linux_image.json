{
    "packMode": "jpackage",
    "platform": "linux",
    "dest": "/home/oyzh/Documents/Package/EasyShell/${appVersion}/",
    "appIcon": "${projectPath}/resource/shell.png",
    "mainJar": "${projectPath}/target/easyshell-${appVersion}.jar",
    "jdkPath": "$SYSTEM",
    "jpackage": {
        "verbose": true,
        "vendor": "oyzh",
        "type": "app-image",
        "description": "这是一个使用javafx编写的ssh客户端，支持基本的连接管理，分组管理、ssh连接、sftp文件管理、docker管理、x11转发(需要安装第三方x-server)、服务监控、本地终端等功能，支持linux和macos远程，还支持暗色主题、系统主题跟随等能力"
    },
    "compress": {
        "type": "zip"
    },
    "jdeps": {
        "multi-release": 24,
        "summary": true,
        "skips": [
            "javafx-.*.jar"
        ],
        "excludes": [
            "jdk.jfr"
        ]
    },
    "jlink": {
        "exclude-files": [
            "**.md",
            "**LICENSE",
            "**COPYRIGHT",
            "**classlist",
            "**README.txt",
            "**sound.properties",
            "**ASSEMBLY_EXCEPTION",
            "**ADDITIONAL_LICENSE_INFO"
        ],
        "add-modules": [
            "java.xml",
            "java.sql",
            "java.base",
            "java.naming",
            "java.logging",
            "java.desktop",
            "java.scripting",
            "java.management",
            "java.datatransfer",
            "java.security.jgss",
            "jdk.unsupported"
        ]
    },
    "jre": {
        "excludes": [
            "COPYRIGHT",
            "README.txt",
            "sound.properties",
            "ASSEMBLY_EXCEPTION",
            "ADDITIONAL_LICENSE_INFO",
            ".*.md",
            "lcms.*",
            "jawt.*",
            "j2gss.*",
            "prefs.*",
            "jsound.*",
            "LICENSE.*",
            "javajpeg.*",
            "classlist.*",
            "jrunscript.*",
            "splashscreen.*"
        ]
    },
    "jar": {
        "removeEmpty": true,
        "excludes": [
            "AL2.0",
            "LGPL2.1",
            "package.html",
            "pom.xml",
            "pom.properties",
            "AUTHORS",
            "README.md",
            "README.txt",
            "DEPENDENCIES",
            "aot.factories",
            "changelog.txt",
            "module-info.class",
            "latestchanges.html",
            "package-info.class",
            "ASSEMBLY_EXCEPTION",
            "reflectionconfig.json",
            "release-timestamp.txt",
            "ADDITIONAL_LICENSE_INFO",
            "reactor.blockhound.integration.BlockHoundIntegration",
            "classpath.idx",
            "LICENSE.*",
            ".*.md",
            ".*.pro",
            ".*.xsd",
            "NOTICE.*",
            ".*.tooling",
            ".*.schemas",
            ".*.handlers",
            "lombok-.*.jar",
            ".*.processors",
            ".*.kotlin_module",
            ".*.dll",
            ".*.dylib",
            "data.zip",
            "git.properties",
            "native-image.properties",
            "spring-boot-jarmode-layertools-.*.jar"
        ]
    }
}
